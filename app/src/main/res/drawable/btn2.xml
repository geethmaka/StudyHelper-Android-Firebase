<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btn_shade">
    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="55"
                android:startColor="@color/btn2_r"
                android:endColor="@color/btn1_y1"
                android:type="linear"
                />
            <padding
                android:right="0sp"
                android:left="0sp"
                android:top="0sp"
                android:bottom="0sp"/>
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>
    </item>
</ripple>
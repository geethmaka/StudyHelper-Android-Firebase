<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="127dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="8sp"
        android:paddingRight="8sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:layout_editor_absoluteY="1dp"
            android:background="@color/Cyan50">

            <TextView
                android:id="@+id/tv_complain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nipun Senarth"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingStart="6sp"
            android:paddingTop="2sp"
            android:paddingEnd="5dp"
            android:background="@color/a100">

            <TextView
                android:id="@+id/user_complain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="We have a problem in uploading courses. Its good if we have past papers as PDF format."
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
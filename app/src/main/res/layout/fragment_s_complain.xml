<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.SComplainFragment">

    <RelativeLayout
        android:background="@drawable/profile_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bg_overview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="82dp"
                android:layout_marginTop="60dp"
                android:text="@string/scomplaint_details"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/stype"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="129dp"
                android:entries="@array/smm_subject_arrays"
                android:prompt="@string/sm_subject_prompt">

            </Spinner>

            <EditText
                android:id="@+id/smassage"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="218dp"
                android:hint="message"
                android:inputType="text" />

            <Button
                android:id="@+id/scomplaintadd"
                style="@style/loginButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="75dp"
                android:layout_marginTop="311dp"
                android:text="Submit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="458dp"
                android:gravity="center">

                <Button
                    android:id="@+id/scomplains"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="complaints" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

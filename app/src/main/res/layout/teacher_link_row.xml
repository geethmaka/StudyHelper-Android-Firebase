<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/pagebackground">


        <TextView
            android:id="@+id/textView_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="50dp"
            android:text="@string/Sub_name"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/link2"
            app:layout_constraintEnd_toStartOf="@+id/link1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/link1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="15dp"
            android:text="@string/subject"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/editlinktitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_link"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/link2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="258dp"
            android:layout_marginBottom="127dp"
            android:text="@string/Title_sub"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editlink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_link" />


        <EditText
            android:id="@+id/editlinktitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/roundedtext"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="@string/edit_title"
            app:layout_constraintBottom_toTopOf="@+id/editlink"
            app:layout_constraintEnd_toEndOf="@+id/editlink_title"
            app:layout_constraintStart_toStartOf="@+id/updatelink"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/editlink_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_transp"
            app:layout_constraintBottom_toTopOf="@+id/updatelink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_edit_course" />


        <ImageButton
            android:id="@+id/editlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/btn_transp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/link2"
            app:layout_constraintTop_toBottomOf="@+id/editlinktitle"
            app:srcCompat="@drawable/ic_edit_course" />

        <EditText
            android:id="@+id/updatelink"
            android:layout_width="219dp"
            android:layout_height="0dp"
            android:layout_marginBottom="108dp"
            android:background="@drawable/roundedtext"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="@string/linkUpdate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editlink"
            app:layout_constraintTop_toBottomOf="@+id/editlink_title" />

        <ImageButton
            android:id="@+id/update_link"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="173dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btn_transp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updatelink"
            app:srcCompat="@drawable/ic_baseline_check_circle_24" />

        <ImageButton
            android:id="@+id/delete_link"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="109dp"
            android:background="@drawable/btn_transp"
            app:layout_constraintBottom_toBottomOf="@+id/update_link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/update_link"
            app:layout_constraintTop_toTopOf="@+id/update_link"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>